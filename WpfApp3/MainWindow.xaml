<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp3.SideDisplay"
    x:Class="WpfApp3.MainWindow"
    mc:Ignorable="av" 
    WindowStartupLocation="CenterScreen"
    Title="MainWindow"
    Height="800"
    Width="1200"
    >
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
        <Viewbox StretchDirection="DownOnly" Stretch="Fill">
            <Grid x:Name="SideBar" Grid.Row="0">
                <local:SideBar/>
            </Grid>
        </Viewbox>
            <Grid x:Name="MainWindows" Grid.Row="1">
                <local:AppGuide x:Name="AppGuide" Visibility="Collapsed" Grid.ColumnSpan="2"/>
                
                    <local:AlarmDashBoard x:Name="AlaramDashBoadrd" Visibility="Visible" Grid.ColumnSpan="2"/>
                
                <local:PCUseInfo x:Name="PCUseInfo" Visibility="Visible" Grid.ColumnSpan="2"/>
                <local:Setting x:Name="Setting" Visibility="Collapsed" Grid.ColumnSpan="2"/>
            </Grid>
            
            <Grid x:Name="EffectPanel" Grid.Row="1" Visibility="Visible">
            </Grid>
        </Grid>
</Window>